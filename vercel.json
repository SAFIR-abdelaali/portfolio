{
  "version": 2,
  "builds": [
    { "src": "**", "use": "@vercel/static" }
  ],
  "routes": [
    { 
      "src": "/public/images/CV.pdf", 
      "dest": "/public/images/CV.pdf",
      "headers": {
        "Content-Type": "application/pdf",
        "Content-Disposition": "attachment; filename=Abdelaali_Safir_CV.pdf"
      }
    },
    { "src": "/src/styles/(.*)", "dest": "/src/styles/$1" },
    { "src": "/src/scripts/(.*)", "dest": "/src/scripts/$1" },
    { "src": "/public/images/(.*)", "dest": "/public/images/$1" },
    { "src": "/public/(.*)", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
